{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"target": "ES2021",
		"module": "ES2022",
		"moduleResolution": "node",
		"types": [
			"@types/bun"
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts"
	]
}
