---
import Layout from '../layouts/Layout.astro';
import { auth } from '@backend/auth';

const session = await auth.api.getSession({
	headers: Astro.request.headers,
});

if (session) {
	console.log('User is signed in, signing out ...');
	await auth.api.signOut({
		headers: Astro.request.headers,
	});
}
---

<Layout title="Sign In - Tail Mates">
	<main>
		<div class="sign-in-container">
			<h1>Welcome to Tail Mates</h1>
			<p class="subtitle">
				Connect with fellow pet lovers and find your perfect tail mate!
			</p>

			<div class="sign-in-form">
				<h2>Sign In</h2>

				<button id="google-signin-btn" class="google-btn">
					<svg
						class="google-icon"
						viewBox="0 0 24 24"
						width="20"
						height="20"
					>
						<path
							fill="#4285F4"
							d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
						></path>
						<path
							fill="#34A853"
							d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
						></path>
						<path
							fill="#FBBC05"
							d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
						></path>
						<path
							fill="#EA4335"
							d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
						></path>
					</svg>
					Continue with Google
				</button>

				<div class="legal-links">
					<p>
						By signing in, you agree to our
						<a href="/terms-and-conditions">Terms and Conditions</a>
						and
						<a href="/privacy-policy">Privacy Policy</a>
					</p>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		font-family: system-ui, sans-serif;
	}

	.sign-in-container {
		background: white;
		padding: 3rem;
		border-radius: 16px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		text-align: center;
		max-width: 400px;
		width: 100%;
		margin: 2rem;
	}

	h1 {
		color: #333;
		margin-bottom: 0.5rem;
		font-size: 2rem;
		font-weight: 600;
	}

	.subtitle {
		color: #666;
		margin-bottom: 2rem;
		line-height: 1.5;
	}

	.sign-in-form {
		margin-top: 2rem;
	}

	h2 {
		color: #333;
		margin-bottom: 1.5rem;
		font-size: 1.5rem;
		font-weight: 500;
	}

	.google-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 12px;
		width: 100%;
		padding: 12px 20px;
		background: white;
		border: 2px solid #ddd;
		border-radius: 8px;
		font-size: 16px;
		font-weight: 500;
		color: #333;
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.google-btn:hover {
		border-color: #4285f4;
		box-shadow: 0 2px 8px rgba(66, 133, 244, 0.2);
	}

	.google-icon {
		flex-shrink: 0;
	}

	.legal-links {
		margin-top: 2rem;
		padding-top: 1.5rem;
		border-top: 1px solid #eee;
	}

	.legal-links p {
		font-size: 0.875rem;
		color: #666;
		line-height: 1.5;
		margin: 0;
	}

	.legal-links a {
		color: #4285f4;
		text-decoration: none;
	}

	.legal-links a:hover {
		text-decoration: underline;
	}
</style>

<script>
	// Import the auth client and set up Google sign-in
	import { authClient } from '../auth/auth-client';

	document
		.getElementById('google-signin-btn')
		?.addEventListener('click', async () => {
			authClient.signIn.social(
				{
					provider: 'google',
					callbackURL: '/',
				},
				{
					onSuccess: () => {
						// Redirect to the dashboard or sign in page
						console.log('Success');
					},
					onError: (ctx) => {
						// Display the error message
						console.error(ctx.error.message);
						alert(ctx.error.message);
					},
				},
			);
		});
</script>
