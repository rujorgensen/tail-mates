{
	"name": "frontend-tailmates",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/frontend-ng/src",
	"tags": [
		"type:application",
		"scope:frontend"
	],
	"targets": {
		"build": {
			"executor": "@angular/build:application",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "dist/apps/frontend-ng",
				"browser": "apps/frontend-ng/src/main.ts",
				"polyfills": [
					"zone.js"
				],
				"tsConfig": "apps/frontend-ng/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					{
						"glob": "**/*",
						"input": "apps/frontend-ng/public"
					}
				],
				"styles": [
					"apps/frontend-ng/src/styles.scss"
				],
				"server": "apps/frontend-ng/src/main.server.ts",
				"ssr": {
					"entry": "apps/frontend-ng/src/server.ts"
				},
				"outputMode": "server"
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "1mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "4kb",
							"maximumError": "8kb"
						}
					],
					"outputHashing": "all"
				},
				"development": {
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"continuous": true,
			"executor": "@angular/build:dev-server",
			"options": {
				"port": 3101,
			    "proxyConfig": "apps/frontend-ng/proxy.conf.json"
			},
			"configurations": {
				"production": {
					"buildTarget": "frontend-tailmates:build:production"
				},
				"development": {
					"buildTarget": "frontend-tailmates:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular/build:extract-i18n",
			"options": {
				"buildTarget": "frontend-tailmates:build"
			}
		},
		"serve-static": {
			"continuous": true,
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "frontend-tailmates:build",
				"port": 3101,
				"staticFilePath": "dist/apps/frontend-ng/browser",
				"spa": true
			}
		}
	}
}
