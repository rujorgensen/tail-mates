{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@tail-mates/web-components": [
        "libs/frontend/web-components-2/src/index.ts"
      ],
      "@prisma-types/flux": [
        "node_modules/@prisma-types/tail-mates"
      ],
      "@backend/auth": [
        "libs/backend/auth/src/index.ts"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}