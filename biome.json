{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!.nx",
			"!dist"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"expand": "always"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"options": {
		"patterns": [
			{
				"group": [
					"import-foo/*",
					"!import-foo/baz"
				],
				"message": "import-foo is deprecated, except for modules in import-foo/baz."
			},
			{
				"group": [
					"import-foo/*"
				],
				"importNamePattern": "[xyz]"
			},
			{
				"group": [
					"import-foo/*"
				],
				"importNamePattern": "[xyz]",
				"invertImportNamePattern": true
			}
		]
	}
}