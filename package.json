{
	"name": "tail-mates",
	"type": "module",
	"version": "0.0.3",
	"scripts": {
		"upd": "bun upgrade && ncu -i --format group",
		"bupd": "bun update --interactive --save",
		"web-components:build": "bun build ./libs/frontend/web-components/src/index.ts --outdir ./dist/libs/frontend/web-components --format esm",
		"//-00a": "// ****************************************************************************",
		"//-00b": "// *** Storybook                                                               ",
		"//-00c": "// ****************************************************************************",
		"storybook-build": "storybook build --config-dir libs/frontend/web-components/.storybook --output-dir ./dist/libs/frontend/storybook-web-components",
		"storybook:docker:build": "docker build -f ./.deploy/web-components.storybook.Dockerfile -t web-components-storybook .",
		"storybook:docker:run": "docker run -p 3021:3021 web-components-storybook",
		"//-01a": "// ****************************************************************************",
		"//-01b": "// *** Docker                                                                ",
		"//-01c": "// ****************************************************************************",
		"docker:tail-mates:dev:up": "docker compose -p tail-mates -f .deploy/docker-compose.dev.yml up -d --build",
		"docker:tail-mates:dev:down": "docker compose -p tail-mates -f .deploy/docker-compose.dev.yml down",
		"//-02a": "// ****************************************************************************",
		"//-02b": "// *** Prisma                                                                  ",
		"//-02c": "// ****************************************************************************",
		"prisma:generate:tail-mates": "bunx prisma generate --schema=./prisma/schema.prisma",
		"prisma:migrate:dev:tail-mates": "bunx prisma migrate dev --schema=./prisma/schema.prisma --name=init",
		"prisma:studio:tail-mates": "bunx prisma studio --schema=./prisma/schema.prisma",
		"prisma:deploy": "bunx prisma migrate deploy --schema=./prisma/schema.prisma",
		"//-03a": "// ****************************************************************************",
		"//-03b": "// *** Better Auth                                                             ",
		"//-03c": "// ****************************************************************************",
		"auth:generate": "npx @better-auth/cli@latest generate --config=./libs/backend/auth/src/lib/auth.ts",
		"//-04a": "// ****************************************************************************",
		"//-04b": "// *** Misc                                                                    ",
		"//-04c": "// ****************************************************************************",
		"postinstall": "bun prisma:generate:tail-mates || true",
		"//-05a": "// ****************************************************************************",
		"//-05b": "// *** Deploy                                                                  ",
		"//-05c": "// ****************************************************************************",
		"deploy:tail-mates": "bun prisma:deploy && bun run ./dist/apps/backend/main.js",
		"format": "bunx biome format --write"
	},
	"dependencies": {
		"@angular-devkit/build-angular": "~20.1.6",
		"@angular/common": "~20.2.0",
		"@angular/compiler": "~20.2.0",
		"@angular/core": "~20.2.0",
		"@angular/forms": "~20.2.0",
		"@angular/platform-browser": "~20.2.0",
		"@angular/platform-server": "~20.2.0",
		"@angular/router": "~20.2.0",
		"@angular/ssr": "~20.1.6",
		"@elysiajs/cors": "^1.3.3",
		"@elysiajs/eden": "^1.3.2",
		"@elysiajs/static": "^1.3.0",
		"@prisma/client": "^6.14.0",
		"@types/bun": "^1.2.20",
		"@types/leaflet": "^1.9.20",
		"better-auth": "1.3.7",
		"discord.js": "^14.21.0",
		"elysia": "latest",
		"leaflet": "^1.9.4",
		"prisma-dbml-generator": "^0.12.0",
		"rxjs": "~7.8.2",
		"zone.js": "~0.15.1"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "~1.19.4",
		"@analogjs/vitest-angular": "~1.19.4",
		"@angular-devkit/core": "~20.1.6",
		"@angular-devkit/schematics": "~20.1.6",
		"@angular/build": "~20.1.6",
		"@angular/cli": "~20.1.6",
		"@angular/compiler-cli": "~20.1.7",
		"@angular/language-service": "~20.2.0",
		"@angular/localize": "^20.2.0",
		"@biomejs/biome": "2.2.0",
		"@chromatic-com/storybook": "^4",
		"@nx/angular": "21.4.0",
		"@nx/devkit": "21.4.0",
		"@nx/js": "21.4.0",
		"@nx/playwright": "21.4.0",
		"@nx/storybook": "21.4.0",
		"@nx/vite": "21.4.0",
		"@nx/web": "21.4.0",
		"@playwright/test": "^1.55.0",
		"@schematics/angular": "~20.1.6",
		"@storybook/addon-a11y": "^9.1.2",
		"@storybook/addon-docs": "^9.1.2",
		"@storybook/addon-vitest": "^9.1.2",
		"@storybook/html-vite": "^9.1.2",
		"@storybook/web-components-vite": "^9.1.2",
		"@swc-node/register": "~1.11.1",
		"@swc/core": "~1.13.3",
		"@swc/helpers": "~0.5.17",
		"@types/node": "24.3.0",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"bun-types": "latest",
		"jiti": "2.5.1",
		"jsdom": "~26.1.0",
		"lit": "^3.3.1",
		"nx": "21.4.0",
		"playwright": "^1.55.0",
		"prettier": "^3.0.0",
		"prisma": "^6.14.0",
		"storybook": "^9.1.2",
		"tslib": "^2.8.1",
		"typescript": "5.8.3",
		"vite": "^7.1.3",
		"vite-plugin-dts": "~4.5.4",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"packageManager": "bun@1.2.20"
}
