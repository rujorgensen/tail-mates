{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!.nx",
			"!dist"
		]
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2
		},
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"expand": "always"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noRestrictedImports": {
					"level": "warn",
					"options": {
						"patterns": [
							{
								"group": [
									"import-foo/*",
									"!import-foo/baz"
								],
								"message": "import-foo is deprecated, except for modules in import-foo/baz."
							},
							{
								"group": [
									"import-foo/*"
								],
								"importNamePattern": "[xyz]"
							},
							{
								"group": [
									"import-foo/*"
								],
								"importNamePattern": "[xyz]",
								"invertImportNamePattern": true
							}
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		},
		"linter": {
			"enabled": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}